---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
---

<Layout title="Satellite Data - Landsat Explorer">
    <Navbar />
    <main class="container mx-auto mt-8 p-4">
        <h1 class="text-4xl font-bold mb-6">Satellite Data</h1>
        <p class="text-xl mb-4">Access and explore Landsat satellite data.</p>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div class="bg-gray-100 p-4 rounded-lg">
                <h2 class="text-2xl font-semibold mb-2">Latest Images</h2>
                <p>View the most recent satellite imagery.</p>
            </div>
            <div class="bg-gray-100 p-4 rounded-lg">
                <h2 class="text-2xl font-semibold mb-2">Historical Data</h2>
                <p>Explore our archive of historical satellite data.</p>
            </div>
        </div>
    </main>
</Layout>
