---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import { BarChart, FileText, Clock, Download } from "lucide-react";

const dataCategories = [
    {
        title: "Latest Images",
        description: "View the most recent satellite imagery.",
        icon: BarChart,
    },
    {
        title: "Historical Data",
        description: "Explore our archive of historical satellite data.",
        icon: Clock,
    },
    {
        title: "Data Analysis Tools",
        description: "Access tools for analyzing Landsat data.",
        icon: FileText,
    },
    {
        title: "Download Center",
        description: "Download raw data for your research needs.",
        icon: Download,
    },
];
---

<Layout title="Satellite Data - Landsat Explorer">
    <Navbar />
    <main
        class="relative min-h-screen bg-space bg-cover bg-center overflow-hidden py-16"
    >
        <div class="absolute inset-0 bg-black opacity-50"></div>
        <div class="stars"></div>
        <div class="twinkling"></div>
        <div class="relative z-10 container mx-auto px-4">
            <h1
                class="text-5xl font-bold mb-8 text-white text-center tracking-wide"
            >
                Satellite Data
            </h1>
            <p
                class="text-xl mb-12 text-blue-200 text-center max-w-3xl mx-auto"
            >
                Access and explore Landsat satellite data to uncover insights
                about our planet's ever-changing landscape.
            </p>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                {
                    dataCategories.map((category) => (
                        <div class="backdrop-blur-md bg-opacity-20 bg-blue-900 p-6 rounded-lg shadow-2xl border border-blue-500 transition-transform duration-300 hover:scale-105">
                            <category.icon className="w-12 h-12 text-blue-300 mb-4" />
                            <h2 class="text-2xl font-semibold mb-2 text-white">
                                {category.title}
                            </h2>
                            <p class="text-blue-200">{category.description}</p>
                        </div>
                    ))
                }
            </div>
        </div>
    </main>
</Layout>

<style>
    .bg-space {
        background-image: url("https://images.unsplash.com/photo-1451187580459-43490279c0fa?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80");
    }

    .stars,
    .twinkling {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        width: 100%;
        height: 100%;
    }

    .stars {
        background: transparent
            url("https://s3-us-west-2.amazonaws.com/s.cdpn.io/1231630/stars.png")
            repeat top center;
        z-index: 0;
    }

    .twinkling {
        background: transparent
            url("https://s3-us-west-2.amazonaws.com/s.cdpn.io/1231630/twinkling.png")
            repeat top center;
        z-index: 1;
        animation: move-twink-back 200s linear infinite;
    }

    @keyframes move-twink-back {
        from {
            background-position: 0 0;
        }
        to {
            background-position: -10000px 5000px;
        }
    }
</style>
