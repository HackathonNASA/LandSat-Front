---
// Import necessary icons from lucide-react
import { BarChart, FileText, Clock, Download } from "lucide-react";

const dataCategories = [
    {
        title: "Latest Images",
        description: "View the most recent satellite imagery.",
        icon: BarChart,
    },
    {
        title: "Historical Data",
        description: "Explore our archive of historical satellite data.",
        icon: Clock,
    },
    {
        title: "Data Analysis Tools",
        description: "Access tools for analyzing Landsat data.",
        icon: FileText,
    },
    {
        title: "Download Center",
        description: "Download raw data for your research needs.",
        icon: Download,
    },
];
---

<section class="relative z-10 py-16">
    <div class="container mx-auto px-4">
        <h1 class="text-5xl font-bold mb-8 text-white text-center tracking-wide">
            Satellite Data
        </h1>
        <p class="text-xl mb-12 text-blue-200 text-center max-w-3xl mx-auto">
            Access and explore Landsat satellite data to uncover insights about our planet's ever-changing landscape.
        </p>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            {
                dataCategories.map((category) => (
                        <div class="backdrop-blur-md bg-opacity-20 bg-blue-900 p-6 rounded-lg shadow-2xl border border-blue-500 transition-transform duration-300 hover:scale-105">
                            <category.icon className="w-12 h-12 text-blue-300 mb-4" />
                            <h2 class="text-2xl font-semibold mb-2 text-white">
                                {category.title}
                            </h2>
                            <p class="text-blue-200">{category.description}</p>
                        </div>
                ))
            }
        </div>
    </div>
</section>
