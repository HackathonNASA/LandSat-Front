---
import { BarChart, FileText, Clock, Download } from "lucide-react";

// Data for categories
const dataCategories = [
    {
        title: "Latest Images",
        description: "View the most recent satellite imagery.",
        icon: BarChart,
        details:
            "Access the latest high-resolution satellite images captured by Landsat satellites. Our database is updated daily with new imagery from around the globe.",
    },
    {
        title: "Historical Data",
        description: "Explore our archive of historical satellite data.",
        icon: Clock,
        details:
            "Dive into our extensive archive of Landsat data dating back to 1972. Track changes in land use, urban growth, and environmental shifts over time.",
    },
    {
        title: "Data Analysis Tools",
        description: "Access tools for analyzing Landsat data.",
        icon: FileText,
        details:
            "Utilize our suite of analysis tools to process and interpret Landsat data. Features include spectral analysis, change detection, and vegetation indices calculation.",
    },
    {
        title: "Download Center",
        description: "Download raw data for your research needs.",
        icon: Download,
        details:
            "Download raw Landsat data in various formats suitable for GIS software and custom analysis pipelines. Available in both georeferenced and non-georeferenced formats.",
    },
];
---

<section class="relative z-10 py-16">
    <div class="container mx-auto px-4">
        <h1
            class="text-5xl font-bold mb-8 text-white text-center tracking-wide"
        >
            Satellite Data
        </h1>
        <p class="text-xl mb-12 text-blue-200 text-center max-w-3xl mx-auto">
            Access and explore Landsat satellite data to uncover insights about
            our planet's ever-changing landscape.
        </p>

        <!-- Cards Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            {
                dataCategories.map((category, index) => (
                    <div class="data-category">
                        <div
                            class="category-card backdrop-blur-md bg-opacity-20 bg-blue-900 p-6 rounded-lg shadow-2xl border border-blue-500 transition-transform duration-300 hover:scale-105 cursor-pointer"
                            data-index={index}
                        >
                            <category.icon className="w-12 h-12 text-blue-300 mb-4" />
                            <h2 class="text-2xl font-semibold mb-2 text-white">
                                {category.title}
                            </h2>
                            <p class="text-blue-200">{category.description}</p>
                        </div>
                        <div class="category-details mt-4 p-6 bg-blue-800 bg-opacity-50 rounded-lg hidden">
                            <p class="text-blue-100">{category.details}</p>
                        </div>
                    </div>
                ))
            }
        </div>
    </div>
</section>

<style>
    .category-details.show {
        display: block;
        animation: fadeIn 0.3s ease-out;
    }

    @keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(-10px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

