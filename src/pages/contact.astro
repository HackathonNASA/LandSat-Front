---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
---

<Layout title="Contact Us - Landsat Explorer">
    <Navbar />
    <main
        class="relative min-h-screen bg-space bg-cover bg-center overflow-hidden"
    >
        <div class="absolute inset-0 bg-black opacity-50"></div>
        <div class="stars"></div>
        <div class="twinkling"></div>
        <div class="relative z-10 container mx-auto px-4 py-16">
            <h1
                class="text-5xl font-bold mb-8 text-white text-center tracking-wide"
            >
                Contact Mission Control
            </h1>
            <div class="max-w-2xl mx-auto">
                <form
                    class="space-y-6 backdrop-blur-md bg-opacity-20 bg-blue-900 p-8 rounded-lg shadow-2xl border border-blue-500"
                >
                    <div>
                        <label
                            for="name"
                            class="block text-lg font-medium text-blue-300 mb-2"
                            >Name</label
                        >
                        <input
                            type="text"
                            id="name"
                            name="name"
                            required
                            class="w-full px-4 py-3 rounded-md bg-gray-800 text-white border border-blue-500 focus:border-blue-300 focus:ring focus:ring-blue-200 focus:ring-opacity-50 transition duration-300"
                        />
                    </div>
                    <div>
                        <label
                            for="email"
                            class="block text-lg font-medium text-blue-300 mb-2"
                            >Email</label
                        >
                        <input
                            type="email"
                            id="email"
                            name="email"
                            required
                            class="w-full px-4 py-3 rounded-md bg-gray-800 text-white border border-blue-500 focus:border-blue-300 focus:ring focus:ring-blue-200 focus:ring-opacity-50 transition duration-300"
                        />
                    </div>
                    <div>
                        <label
                            for="message"
                            class="block text-lg font-medium text-blue-300 mb-2"
                            >Message</label
                        >
                        <textarea
                            id="message"
                            name="message"
                            rows="5"
                            required
                            class="w-full px-4 py-3 rounded-md bg-gray-800 text-white border border-blue-500 focus:border-blue-300 focus:ring focus:ring-blue-200 focus:ring-opacity-50 transition duration-300"
                        ></textarea>
                    </div>
                    <button
                        type="submit"
                        class="w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-6 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50 transition duration-300 ease-in-out transform hover:scale-105 uppercase tracking-wide"
                    >
                        Transmit Message
                    </button>
                </form>
            </div>
        </div>
    </main>
</Layout>

<style>
    .bg-space {
        background-image: url("https://images.unsplash.com/photo-1451187580459-43490279c0fa?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80");
    }

    .stars,
    .twinkling {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        width: 100%;
        height: 100%;
    }

    .stars {
        background: transparent
            url("https://s3-us-west-2.amazonaws.com/s.cdpn.io/1231630/stars.png")
            repeat top center;
        z-index: 0;
    }

    .twinkling {
        background: transparent
            url("https://s3-us-west-2.amazonaws.com/s.cdpn.io/1231630/twinkling.png")
            repeat top center;
        z-index: 1;
        animation: move-twink-back 200s linear infinite;
    }

    @keyframes move-twink-back {
        from {
            background-position: 0 0;
        }
        to {
            background-position: -10000px 5000px;
        }
    }
</style>
