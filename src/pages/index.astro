---
import Layout from "../layouts/Layout.astro"; // Import the Layout component
import Scene from "../components/Scene.jsx"; // Import the Scene component
import Navbar from "../layouts/Navbar.astro"; // Import the Navbar
import Home from "./sections/home.astro"; // Section with LandsatInfo
import About from "./sections/about.astro"; // Import your About section
import Data from "./sections/data.astro"; // Import your Data section
import Contact from "./sections/contact.astro"; // Import your Contact section
import Tool from "./sections/tool.astro"; // Import your Gallery section
import News from "./sections/news.astro"; // Import your News section
---

<Layout title="Landsat Tracker">
  <Navbar />

  <!-- Full background Scene -->
  <div class="fixed inset-0 z-0">
    <Scene client:only="react" />
  </div>

  <main class="relative z-10 flex flex-col">
    <!-- Home Section -->
    <section id="home" class="relative min-h-screen flex items-center">
      <Home />
    </section>

    <!-- Data Section -->
    <section id="data" class="relative py-8">
      <Data />
    </section>

    <!-- Gallery Section -->
    <section id="tool" class="relative py-8">
      <Tool />
    </section>

    <!-- About Section -->
    <section id="about" class="relative py-8">
      <About />
    </section>

    <!-- News Section -->
    <section id="news" class="relative py-8">
      <News />
    </section>

    <!-- Contact Section -->
    <section id="contact" class="relative py-8">
      <Contact />
    </section>
  </main>
</Layout>
