---
// Importaciones
import Layout from "../layouts/Layout.astro";
import Scene from "../components/Scene.jsx";
import LandsatInfo from "../components/LandsatInfo.astro";
import Navbar from "../components/Navbar.astro";
---

<Layout title="3D Earth Viewer - Landsat Explorer">
  <Navbar />
  <main
    class="relative flex flex-col h-screen bg-space bg-cover bg-center overflow-hidden"
  >
    <div class="absolute inset-0 bg-black opacity-50"></div>
    <div class="stars"></div>
    <div class="twinkling"></div>

    <div class="relative z-10 flex flex-col md:flex-row w-full h-full">
      <div
        class="w-full md:w-1/3 h-[calc(100vh-<altura-del-navbar>)] md:h-full p-8 flex items-center justify-center"
      >
        <div
          class="backdrop-blur-md bg-opacity-20 bg-blue-900 p-6 rounded-lg shadow-2xl border border-blue-500"
        >
          <LandsatInfo />
        </div>
      </div>
      <div
        class="w-full md:w-2/3 h-[calc(100vh-<altura-del-navbar>)] md:h-full"
      >
        <Scene client:only="react" />
      </div>
    </div>
  </main>
</Layout>
