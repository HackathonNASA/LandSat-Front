---
import Layout from "../layouts/Layout.astro";
import Scene from "../components/Scene.jsx";
import LandsatInfo from "../components/LandsatInfo.astro";
---

<Layout title="3D Earth Viewer">
  <div class="flex flex-col md:flex-row w-full h-screen overflow-hidden">
    <!-- Landsat Info section -->
    <div class="w-full md:w-1/3 h-1/2 md:h-full p-4 flex items-center justify-center relative z-10">
      <LandsatInfo />
    </div>
    <!-- 3D Earth Viewer -->
    <div class="w-full md:w-2/3 h-1/2 md:h-full relative">
      <Scene client:load />
    </div>
  </div>
</Layout>
