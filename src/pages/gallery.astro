---

<section id="gallery" class="relative min-h-screen bg-space bg-cover bg-center overflow-hidden py-16">
    <div class="relative z-10 container mx-auto px-4">
        <h1 class="text-5xl font-bold mb-8 text-white text-center tracking-wide">
            Image Gallery
        </h1>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {
                images.map((image) => (
                        <div
                                key={image.id}
                                class="group relative overflow-hidden rounded-lg shadow-lg transition-transform duration-300 hover:scale-105"
                        >
                            <img
                                    src={image.src}
                                    alt={image.alt}
                                    class="w-full h-64 object-cover"
                            />
                            <div class="absolute inset-0 bg-gradient-to-t from-black to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300" />
                            <p class="absolute bottom-4 left-4 text-white text-lg font-semibold opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                                {image.alt}
                            </p>
                        </div>
                ))
            }
        </div>
    </div>
</section>
