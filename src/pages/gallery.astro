    {
        id: 1,
        src: "https://images.unsplash.com/photo-1451187580459-43490279c0fa",
        alt: "Earth from space",
    },
    {
        id: 2,
        src: "https://images.unsplash.com/photo-1614730321146-b6fa6a46bcb4",
        alt: "Satellite view of coastline",
    },
    {
        id: 3,
        src: "https://images.unsplash.com/photo-1604618542640-f9f6f3c76e1c",
        alt: "Mountain range from space",
    },
    {
        id: 4,
        src: "https://images.unsplash.com/photo-1607499699372-7bb722dff7e2",
        alt: "Desert landscape from satellite",
    },
    {
        id: 5,
        src: "https://images.unsplash.com/photo-1569974498991-d3c12a504f95",
        alt: "City lights at night from space",
